{
  "title": "MockForge - Distributed Chaos Coordination",
  "tags": ["mockforge", "chaos", "distributed"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Active Nodes",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "count(mockforge_node_status{status=\"active\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 3,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Leader Node",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "mockforge_leader_term",
          "refId": "A",
          "legendFormat": "Term {{term}}: {{leader_id}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Running Tasks",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "count(mockforge_task_status{status=\"running\"})",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Task Success Rate",
      "type": "gauge",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(mockforge_task_completed_total{status=\"success\"}[5m])) / sum(rate(mockforge_task_completed_total[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 70,
                "color": "yellow"
              },
              {
                "value": 90,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Node Status Distribution",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "count by (status) (mockforge_node_status)",
          "refId": "A",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "id": 6,
      "title": "Task Execution Timeline",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 16,
        "x": 8,
        "y": 4
      },
      "targets": [
        {
          "expr": "sum by (task_id) (mockforge_task_progress)",
          "refId": "A",
          "legendFormat": "{{task_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        }
      }
    },
    {
      "id": 7,
      "title": "Node Heartbeats",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "rate(mockforge_node_heartbeat_total[1m])",
          "refId": "A",
          "legendFormat": "{{node_id}}"
        }
      ]
    },
    {
      "id": 8,
      "title": "Coordination Mode Distribution",
      "type": "bargauge",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "targets": [
        {
          "expr": "sum by (coordination_mode) (mockforge_task_total)",
          "refId": "A",
          "legendFormat": "{{coordination_mode}}"
        }
      ]
    },
    {
      "id": 9,
      "title": "Task Execution Metrics",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 20
      },
      "targets": [
        {
          "expr": "mockforge_task_metrics",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "progress"
            },
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "gradient-gauge"
              }
            ]
          }
        ]
      }
    }
  ]
}
