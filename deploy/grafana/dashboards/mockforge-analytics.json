{
  "title": "MockForge - Advanced Analytics",
  "tags": ["mockforge", "analytics", "chaos"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Chaos Impact Severity",
      "type": "gauge",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "mockforge_chaos_impact_severity",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 0.3,
                "color": "yellow"
              },
              {
                "value": 0.6,
                "color": "orange"
              },
              {
                "value": 0.8,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Total Chaos Events",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(increase(mockforge_chaos_events_total[1h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 100,
                "color": "yellow"
              },
              {
                "value": 500,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Peak Chaos Time",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "max_over_time(mockforge_chaos_events_per_minute[1h])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Degradation Percentage",
      "type": "gauge",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "mockforge_avg_degradation_percent",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 5,
      "title": "Event Distribution by Type",
      "type": "piechart",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 6
      },
      "targets": [
        {
          "expr": "sum by (event_type) (increase(mockforge_chaos_events_total[1h]))",
          "refId": "A",
          "legendFormat": "{{event_type}}"
        }
      ]
    },
    {
      "id": 6,
      "title": "Top Affected Endpoints",
      "type": "bargauge",
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "targets": [
        {
          "expr": "topk(10, sum by (endpoint) (increase(mockforge_endpoint_affected_total[1h])))",
          "refId": "A",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    },
    {
      "id": 7,
      "title": "Latency Injection Stats",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "mockforge_latency_avg_ms",
          "refId": "A",
          "legendFormat": "Average"
        },
        {
          "expr": "mockforge_latency_max_ms",
          "refId": "B",
          "legendFormat": "Max"
        },
        {
          "expr": "mockforge_latency_min_ms",
          "refId": "C",
          "legendFormat": "Min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      }
    },
    {
      "id": 8,
      "title": "Fault Injection by Type",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum by (fault_type) (rate(mockforge_fault_injections_total[5m]))",
          "refId": "A",
          "legendFormat": "{{fault_type}}"
        }
      ]
    },
    {
      "id": 9,
      "title": "Rate Limit Violations",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "expr": "rate(mockforge_rate_limit_violations_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Protocol Events Distribution",
      "type": "bargauge",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "targets": [
        {
          "expr": "sum by (protocol) (increase(mockforge_protocol_events_total[1h]))",
          "refId": "A",
          "legendFormat": "{{protocol}}"
        }
      ]
    },
    {
      "id": 11,
      "title": "Chaos Analytics - Time Buckets",
      "type": "heatmap",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 32
      },
      "targets": [
        {
          "expr": "sum by (le) (rate(mockforge_chaos_bucket_duration_seconds_bucket[5m]))",
          "refId": "A",
          "format": "heatmap"
        }
      ]
    },
    {
      "id": 12,
      "title": "Impact Analysis Summary",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 40
      },
      "targets": [
        {
          "expr": "mockforge_chaos_impact",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ]
    }
  ]
}
