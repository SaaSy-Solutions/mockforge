{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "E-commerce Order Contract",
  "description": "Contract schemas for order management endpoints",
  "version": "1.0.0",
  "endpoints": {
    "/api/orders": {
      "POST": {
        "request": {
          "type": "object",
          "required": ["cart_id", "payment_id"],
          "properties": {
            "cart_id": {
              "type": "string",
              "description": "Shopping cart ID"
            },
            "payment_id": {
              "type": "string",
              "description": "Payment ID"
            },
            "shipping_address": {
              "type": "object",
              "properties": {
                "street": {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                },
                "state": {
                  "type": "string"
                },
                "zip": {
                  "type": "string"
                },
                "country": {
                  "type": "string"
                }
              }
            }
          }
        },
        "response": {
          "201": {
            "type": "object",
            "required": ["order"],
            "properties": {
              "order": {
                "type": "object",
                "required": ["id", "status", "total"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["pending", "processing", "shipped", "delivered", "cancelled"]
                  },
                  "total": {
                    "type": "number"
                  },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["product_id", "quantity", "price"],
                      "properties": {
                        "product_id": {
                          "type": "string"
                        },
                        "quantity": {
                          "type": "integer"
                        },
                        "price": {
                          "type": "number"
                        }
                      }
                    }
                  },
                  "created_at": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              }
            }
          },
          "400": {
            "type": "object",
            "required": ["error"],
            "properties": {
              "error": {
                "type": "object",
                "required": ["code", "message"],
                "properties": {
                  "code": {
                    "type": "string",
                    "enum": ["CART_EMPTY", "PAYMENT_FAILED", "INVALID_CART"]
                  },
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/orders/{order_id}": {
      "GET": {
        "response": {
          "200": {
            "type": "object",
            "required": ["order"],
            "properties": {
              "order": {
                "type": "object",
                "required": ["id", "status"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  },
                  "total": {
                    "type": "number"
                  },
                  "items": {
                    "type": "array"
                  },
                  "tracking_number": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "PATCH": {
        "request": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["processing", "shipped", "delivered", "cancelled"]
            },
            "tracking_number": {
              "type": "string"
            },
            "shipment_id": {
              "type": "string"
            }
          }
        },
        "response": {
          "200": {
            "type": "object",
            "required": ["order"],
            "properties": {
              "order": {
                "type": "object",
                "required": ["id", "status"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

