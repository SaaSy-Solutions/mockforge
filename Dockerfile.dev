# Development Dockerfile for MockForge with hot reload
FROM rust:1.75 AS development

# Install required dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for hot reloading
RUN cargo install cargo-watch

# Set the working directory
WORKDIR /app

# Copy dependency files first for better layer caching
COPY Cargo.toml Cargo.lock ./

# Copy the crates directory
COPY crates/ ./crates/

# Copy example files and configuration
COPY examples/ ./examples/
COPY config.example.yaml ./

# Create necessary directories
RUN mkdir -p fixtures logs

# Default command for development (can be overridden)
CMD ["cargo", "watch", "-x", "run -p mockforge-cli -- serve --admin"]
