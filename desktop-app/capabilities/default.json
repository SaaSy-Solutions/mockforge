{
  "$schema": "https://raw.githubusercontent.com/nicegui-org/nicegui/main/nicegui/resources/capability-schema.json",
  "identifier": "default",
  "description": "Default capabilities for MockForge Desktop",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-hide",
    "core:window:allow-show",
    "core:window:allow-maximize",
    "core:window:allow-minimize",
    "core:window:allow-unmaximize",
    "core:window:allow-unminimize",
    "core:window:allow-start-dragging",
    "core:window:allow-set-focus",
    "core:window:allow-set-size",
    "core:window:allow-set-position",
    "core:window:allow-set-title",
    "core:window:allow-set-fullscreen",
    "core:window:allow-set-icon",
    "core:webview:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "notification:default",
    "notification:allow-notify",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "shell:default",
    "opener:default",
    "global-shortcut:default",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install",
    {
      "identifier": "core:event:default",
      "allow": [
        { "event": "file-dropped" },
        { "event": "tray-start-server" },
        { "event": "tray-stop-server" },
        { "event": "server-started" },
        { "event": "server-stopped" },
        { "event": "config-file-opened" },
        { "event": "system-theme-changed" },
        { "event": "update-available" },
        { "event": "update-install-started" },
        { "event": "notification" }
      ]
    }
  ]
}
