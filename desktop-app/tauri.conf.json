{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "MockForge",
  "version": "0.2.8",
  "identifier": "dev.mockforge.app",
  "build": {
    "beforeDevCommand": "cd ../crates/mockforge-ui/ui && pnpm dev",
    "beforeBuildCommand": "cd ../crates/mockforge-ui/ui && pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../crates/mockforge-ui/ui/dist"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "MockForge",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "transparent": false,
        "maximized": false,
        "visible": true,
        "dragDropEnabled": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "MockForge Desktop - API Mocking Framework",
    "longDescription": "MockForge Desktop provides a native desktop application for creating, managing, and deploying mock servers across different protocols with advanced data generation capabilities.",
    "linux": {
      "deb": {
        "depends": [],
        "files": {
          "/usr/share/applications/mockforge.desktop": "assets/mockforge.desktop"
        }
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://updates.mockforge.dev/{{target}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU5QzE2QzE2RjU2RjE2RgpSV1JMRjJYV1JMRjJYV1JMRjJYV1JMRjJYV1JMRjJYV1JMRjJYV1JMRjJYV1JMRjJY"
    }
  }
}
