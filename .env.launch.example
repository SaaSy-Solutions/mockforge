# MockForge launch environment template
# Copy to .env.launch and fill values:
#   cp .env.launch.example .env.launch

# -----------------------------
# Core server configuration
# -----------------------------
PORT=8080
DATABASE_URL=postgres://postgres:password@localhost:5432/mockforge_registry
JWT_SECRET=replace-with-long-random-secret
APP_BASE_URL=https://app.example.com

# -----------------------------
# Storage (S3-compatible)
# -----------------------------
S3_BUCKET=mockforge-plugins
S3_REGION=us-east-1
S3_ENDPOINT=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# -----------------------------
# Stripe billing (required for paid launch)
# -----------------------------
STRIPE_SECRET_KEY=sk_live_replace_me
STRIPE_PRICE_ID_PRO=price_replace_me
STRIPE_PRICE_ID_TEAM=price_replace_me
STRIPE_WEBHOOK_SECRET=whsec_replace_me

# -----------------------------
# Email provider
# EMAIL_PROVIDER: postmark | brevo | smtp | disabled
# -----------------------------
EMAIL_PROVIDER=postmark
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME="Your Product Name"
SUPPORT_EMAIL=support@example.com

# API-based provider credentials (postmark/brevo)
EMAIL_API_KEY=replace_with_email_provider_api_key

# SMTP provider credentials (if EMAIL_PROVIDER=smtp)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# -----------------------------
# Security and web settings
# -----------------------------
CORS_ALLOWED_ORIGINS=https://app.example.com,https://example.com
MAX_REQUEST_BODY_SIZE=10485760

# -----------------------------
# Optional integrations
# -----------------------------
REDIS_URL=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

# Optional deployment orchestrator support (hosted mocks)
FLYIO_API_TOKEN=
FLYIO_ORG_SLUG=
