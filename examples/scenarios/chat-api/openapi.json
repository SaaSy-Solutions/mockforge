{
  "openapi": "3.0.3",
  "info": {
    "title": "Chat API",
    "version": "1.0.0",
    "description": "Real-time chat API with typing indicators and message history"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/messages": {
      "get": {
        "operationId": "getMessages",
        "summary": "Get message history",
        "parameters": [
          {
            "name": "channelId",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Message history",
            "content": {
              "application/json": {
                "example": {
                  "messages": [
                    {
                      "id": "{{uuid}}",
                      "userId": "{{uuid}}",
                      "text": "{{faker.lorem.sentence}}",
                      "timestamp": "{{now}}"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "sendMessage",
        "summary": "Send a message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "channelId": { "type": "string" },
                  "text": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message sent"
          }
        }
      }
    },
    "/api/typing": {
      "post": {
        "operationId": "setTyping",
        "summary": "Set typing indicator",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "channelId": { "type": "string" },
                  "isTyping": { "type": "boolean" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Typing indicator updated"
          }
        }
      }
    }
  }
}
